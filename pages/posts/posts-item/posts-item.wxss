.container{
  display: flex;
  flex-direction: column;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
.banner-img{
  width: 100%;
  height: 460rpx;
}
.author-wrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:20rpx 20rpx 0 20rpx;
}
.author-wrapper .author-avatar{
  width: 64rpx;
  height: 64rpx;
}
.author-wrapper .author-name{
  font-size: 30rpx;
  padding-left: 20rpx;
}
.author-wrapper .author-publish{
  color: #999;
  padding-left: 20rpx;
}
.author-wrapper .author-publish-time{
  color: #999;
  padding-left: 30rpx;
}
.title{
  padding: 0 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.icons-outer{
  padding: 20rpx 20rpx 0 20rpx;
}
.icons-wrapper{
  position: relative;
}
.icons-wrapper::after{
  content: "";
  width: 660rpx;
  height: 1px;
  background: #e5e5e5;
  position: absolute;
  top: 46rpx;
  display: block;
  z-index: -999;
}
.icons-wrapper .icons{
 float: right;
 padding-right: 40rpx;
 vertical-align: middle; 
}
.icons-wrapper .icons image{
  width: 90rpx;
  height: 90rpx;
}
.icons-wrapper .icons image:last-child{
  margin-left: 30rpx;
}
.detail{
  padding: 20rpx 30rpx 0;
  line-height: 44rpx;
  letter-spacing: 2px;
}