.post-item{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom: 5px; 
}
.post-item-data{
  display: flex;
  flex: row;
  align-items: center;
  margin: 10rpx 0 20rpx 10px;
}
.post-item-data image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-item-data text{
  font-size: 26rpx;
  padding-left: 16px;
}
.post-item-img{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-item-txt{
  font-size: 28rpx;
  padding: 0 10rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-item-feedback{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 10px;
}
.post-item-feedback image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
}
.post-item-feedback text{
  font-size: 24rpx;
  margin-right: 20px;
}